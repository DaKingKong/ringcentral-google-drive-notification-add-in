{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "id": "inputLinks",
            "type": "Input.Text",
            "placeholder": "Placeholder text",
            "label": "Please input Google Drive file share links, separated by \";\".",
            "isRequired": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Submit",
                    "data": {
                        "actionType": "subscribe",
                        "botId": "${botId}"
                    }
                }
            ]
        }
    ]
}