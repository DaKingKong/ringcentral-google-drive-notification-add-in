{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "id": "inputLinks",
            "type": "Input.Text",
            "placeholder": "Placeholder text",
            "label": "Please input Google Drive file share links, separated by \";\".",
            "isRequired": true
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Realtime",
                    "value": "realtime"
                },
                {
                    "title": "Daily",
                    "value": "daily"
                },
                {
                    "title": "Weekly",
                    "value": "weekly"
                }
            ],
            "placeholder": "Subscription Mode",
            "id": "state",
            "isRequired": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Submit",
                    "data": {
                        "actionType": "subscribe",
                        "botId": "${botId}"
                    }
                }
            ]
        }
    ]
}