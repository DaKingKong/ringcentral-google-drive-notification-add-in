{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "Active subscriptions in this chat:",
            "$when": "${listType==\"activeSubList\"}"
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "Paused subscriptions in this chat:",
            "$when": "${listType==\"pausedSubList\"}"
        },
        {
            "type": "ColumnSet",
            "$data": "${subscriptionList}",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${iconLink}"
                        }
                    ],
                    "width": "20px",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${fileName}"
                        }
                    ],
                    "width": "stretch",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "$when": "${subscriptionState==\"activeSubList\"}",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Pause",
                                    "data": {
                                        "actionType": "pause",
                                        "botId": "${botId}",
                                        "fileId": "${fileId}",
                                        "groupId": "${groupId}"
                                    },
                                    "style": "destructive"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "$when": "${subscriptionState==\"pausedSubList\"}",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Resume",
                                    "data": {
                                        "actionType": "resume",
                                        "botId": "${botId}",
                                        "fileId": "${fileId}",
                                        "groupId": "${groupId}"
                                    },
                                    "style": "positive"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "$when": "${subscriptionState==\"pausedSubList\"}",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Unsubscribe",
                                    "data": {
                                        "actionType": "unsubscribe",
                                        "botId": "${botId}",
                                        "fileId": "${fileId}",
                                        "groupId": "${groupId}"
                                    },
                                    "style": "destructive"
                                }
                            ]
                        }
                    ]
                }
            ],
            "horizontalAlignment": "Left",
            "separator": true
        }
    ]
}