{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "My subscriptions in this chat:"
        },
        {
            "type": "ColumnSet",
            "$data": "${subscriptionList}",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${iconLink}"
                        }
                    ],
                    "width": "20px",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${fileName}"
                        }
                    ],
                    "width": "stretch",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Unsubscribe",
                                    "data": {
                                        "actionType": "unsubscribe",
                                        "botId": "${botId}",
                                        "fileId": "${fileId}",
                                        "groupId": "${groupId}"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ],
            "horizontalAlignment": "Left",
            "separator": true
        }
    ]
}