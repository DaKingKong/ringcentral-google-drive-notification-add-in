{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "**Active** subscriptions in this chat:",
            "$when": "${showActiveList}"
        },
        {
            "type": "ColumnSet",
            "$data": "${activeSubscriptionList}",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${iconLink}"
                        }
                    ],
                    "width": "20px",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "**${fileName}** (${subscriptionState})"
                        }
                    ],
                    "width": "stretch",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Config",
                                    "data": {
                                        "actionType": "subscriptionConfig",
                                        "botId": "${botId}",
                                        "fileId": "${fileId}",
                                        "iconLink": "${iconLink}",
                                        "fileName": "${fileName}",
                                        "rcUserName": "${rcUserName}",
                                        "subscriptionId": "${subscriptionId}",
                                        "subscriptionState": "${subscriptionState}"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ],
            "horizontalAlignment": "Left",
            "spacing": "Medium",
            "separator": true
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "**Muted** subscriptions in this chat:",
            "$when": "${showMutedList}"
        },
        {
            "type": "ColumnSet",
            "$data": "${mutedSubscriptionList}",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${iconLink}"
                        }
                    ],
                    "width": "20px",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "**${fileName}** (${subscriptionState})"
                        }
                    ],
                    "width": "stretch",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Config",
                                    "data": {
                                        "actionType": "subscriptionConfig",
                                        "botId": "${botId}",
                                        "fileId": "${fileId}",
                                        "iconLink": "${iconLink}",
                                        "fileName": "${fileName}",
                                        "rcUserName": "${rcUserName}",
                                        "subscriptionId": "${subscriptionId}",
                                        "subscriptionState": "${subscriptionState}"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ],
            "horizontalAlignment": "Left",
            "spacing": "Medium",
            "separator": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/ringcentral-google-drive-notification-add-in/master/staticResources/feedback.png",
                            "width": "20px",
                            "horizontalAlignment": "Left"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[Feedback](https://forms.gle/Ngr1M6hhEGxUL9XdA)",
                            "wrap": true,
                            "size": "Small",
                            "horizontalAlignment": "Left"
                        }
                    ],
                    "spacing": "Small",
                    "verticalContentAlignment": "Center"
                }
            ],
            "horizontalAlignment": "Left",
            "spacing": "Medium"
        }
    ]
}