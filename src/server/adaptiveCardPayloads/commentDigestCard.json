{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Your ${subscriptionState} digest for new comments:",
            "wrap": true,
            "separator": true
        },
        {
            "type": "Container",
            "separator": true,
            "$data": "${commentNotifications}",
            "items": [
                {
                    "type": "TextBlock",
                    "text": ""
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "${documentIconUrl}"
                                }
                            ],
                            "width": "auto",
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${documentName}"
                                }
                            ],
                            "width": "auto",
                            "verticalContentAlignment": "Center"
                        }
                    ]
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.ShowCard",
                            "title": "Details",
                            "card": {
                                "type": "AdaptiveCard",
                                "version": "1.5",
                                "body": [
                                    {
                                        "type": "TextBlock",
                                        "size": "Large",
                                        "weight": "Bolder",
                                        "text": "New Comment"
                                    },
                                    {
                                        "type": "ColumnSet",
                                        "columns": [
                                            {
                                                "type": "Column",
                                                "items": [
                                                    {
                                                        "type": "Image",
                                                        "style": "Person",
                                                        "url": "${userAvatar}",
                                                        "size": "Small",
                                                        "width": "40px"
                                                    }
                                                ],
                                                "width": "auto"
                                            },
                                            {
                                                "type": "Column",
                                                "items": [
                                                    {
                                                        "type": "TextBlock",
                                                        "weight": "Bolder",
                                                        "text": "${username}",
                                                        "wrap": true
                                                    },
                                                    {
                                                        "type": "TextBlock",
                                                        "spacing": "None",
                                                        "text": "${userEmail}",
                                                        "isSubtle": true,
                                                        "wrap": true
                                                    }
                                                ],
                                                "width": "stretch"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "TextBlock",
                                        "text": "**${username}** added a **new comment** to the following document:",
                                        "wrap": true
                                    },
                                    {
                                        "type": "ColumnSet",
                                        "separator": true,
                                        "columns": [
                                            {
                                                "type": "Column",
                                                "items": [
                                                    {
                                                        "type": "Image",
                                                        "url": "${documentIconUrl}",
                                                        "size": "Small",
                                                        "height": "16px"
                                                    }
                                                ],
                                                "width": "auto"
                                            },
                                            {
                                                "type": "Column",
                                                "items": [
                                                    {
                                                        "type": "TextBlock",
                                                        "text": "${documentName}",
                                                        "wrap": true
                                                    }
                                                ],
                                                "width": "stretch"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "ColumnSet",
                                        "separator": true,
                                        "columns": [
                                            {
                                                "type": "Column",
                                                "items": [
                                                    {
                                                        "type": "TextBlock",
                                                        "text": "> ${quotedContent}",
                                                        "wrap": true
                                                    }
                                                ],
                                                "width": "stretch"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "ColumnSet",
                                        "separator": true,
                                        "columns": [
                                            {
                                                "type": "Column",
                                                "items": [
                                                    {
                                                        "type": "Image",
                                                        "url": "${commentIconUrl}",
                                                        "size": "Small",
                                                        "width": "20px"
                                                    }
                                                ],
                                                "width": "auto"
                                            },
                                            {
                                                "type": "Column",
                                                "items": [
                                                    {
                                                        "type": "TextBlock",
                                                        "text": "\"${commentContent}\"",
                                                        "wrap": true
                                                    }
                                                ],
                                                "width": "stretch"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "ActionSet",
                                        "actions": [
                                            {
                                                "type": "Action.OpenUrl",
                                                "title": "View",
                                                "url": "${fileUrl}"
                                            },
                                            {
                                                "type": "Action.ToggleVisibility",
                                                "title": "Reply",
                                                "targetElements": [
                                                    "replyContainer"
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "type": "Container",
                                        "items": [
                                            {
                                                "type": "Input.Text",
                                                "label": "Reply",
                                                "id": "replyText",
                                                "isRequired": true,
                                                "errorMessage": "please input your reply"
                                            },
                                            {
                                                "type": "ActionSet",
                                                "actions": [
                                                    {
                                                        "type": "Action.Submit",
                                                        "title": "Submit",
                                                        "data": {
                                                            "action": "replyComment",
                                                            "userId": "${userId}",
                                                            "subscriptionId": "${subscriptionId}",
                                                            "commentId": "${commentId}",
                                                            "fileId": "${fileId}"
                                                        }
                                                    }
                                                ]
                                            }
                                        ],
                                        "id": "replyContainer",
                                        "isVisible": false
                                    }
                                ],
                                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}