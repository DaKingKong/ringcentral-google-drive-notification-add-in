{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Show list for:",
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Active Subscriptions",
                    "data": {
                        "actionType": "activeSubList",
                        "botId": "${botId}"
                    }
                },
                {
                    "type": "Action.Submit",
                    "title": "Muted Subscriptions",
                    "data": {
                        "actionType": "mutedSubList",
                        "botId": "${botId}"
                    }
                }
            ]
        }
    ]
}