{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Config",
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "New File Share notification",
            "wrap": true,
            "weight": "Bolder"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Enable",
                    "data": {
                        "actionType": "turnOnNewFileShareNotification",
                        "botId": "${botId}"
                    }
                }
            ],
            "$when": "${!isNewFileNotificationOn}"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Disable",
                    "data": {
                        "actionType": "turnOffNewFileShareNotification",
                        "botId": "${botId}"
                    }
                }
            ],
            "$when": "${isNewFileNotificationOn}"
        },
        {
            "type": "TextBlock",
            "text": "Logout:",
            "wrap": true,
            "weight": "Bolder"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Logout",
                    "data": {
                        "actionType": "unAuthCard",
                        "botId": "${botId}"
                    },
                    "style": "destructive"
                }
            ]
        }
    ]
}