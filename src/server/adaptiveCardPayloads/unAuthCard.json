{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Unauthorize Google Drive",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Your current Google Drive Account is ${googleUserEmail}.\n\nPlease click below button to **unauthorize**.\n\n**Warning**: It will clear out all subscriptions created under this Google Drive Account.",
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Unauthorize",
                    "data": {
                        "actionType": "unAuth",
                        "botId": "${botId}"
                    },
                    "style": "destructive"
                }
            ]
        }
    ]
}