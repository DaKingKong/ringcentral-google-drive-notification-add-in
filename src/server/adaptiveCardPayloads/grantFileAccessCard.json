{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Grant File Access",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "ColumnSet",
            "separator": true,
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${fileIconUrl}",
                            "size": "Small",
                            "height": "16px"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${fileName} (owner: ${fileOwnerEmail})",
                            "wrap": true
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Click below button to grant access to above users",
            "wrap": true,
            "weight": "Bolder"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Reader",
                    "value": "reader"
                },
                {
                    "title": "Commenter",
                    "value": "commenter"
                },
                {
                    "title": "Writer",
                    "value": "writer"
                }
            ],
            "placeholder": "Reader",
            "value": "reader",
            "label": "Select a role:",
            "id": "permissionRole"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Grant Access",
                    "data": {
                        "actionType": "grantAccess",
                        "googleUserInfo": "${googleUserInfo}",
                        "fileId": "${fileId}",
                        "botId": "${botId}"
                    }
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/ringcentral-google-drive-notification-add-in/master/staticResources/feedback.png",
                            "width": "20px",
                            "horizontalAlignment": "Left"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[Feedback](https://github.com/ringcentral/ringcentral-google-drive-notification-add-in/issues/new)",
                            "wrap": true,
                            "size": "Small",
                            "horizontalAlignment": "Left"
                        }
                    ],
                    "spacing": "Small",
                    "verticalContentAlignment": "Center"
                }
            ],
            "horizontalAlignment": "Left",
            "spacing": "Medium"
        }
    ]
}