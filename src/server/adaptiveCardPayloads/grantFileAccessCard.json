{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Grant File Access",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Click below button to grant access to above users",
            "wrap": true,
            "weight": "Bolder"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Reader",
                    "value": "reader"
                },
                {
                    "title": "Commenter",
                    "value": "commenter"
                },
                {
                    "title": "Writer",
                    "value": "writer"
                }
            ],
            "placeholder": "Reader",
            "value": "reader",
            "label": "Select a role:",
            "id": "permissionRole"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Grant Access",
                    "data": {
                        "actionType": "grantAccess",
                        "googleUserInfo": "${googleUserInfo}",
                        "fileId": "${fileId}",
                        "botId": "${botId}"
                    }
                }
            ]
        }
    ]
}